package ScientificCalculator;


public class CalculorThreaded {
	
	public CalculorThreaded() {
		
	}


public double doOperation (String opCode , double num1 , double num2) {
        switch (opCode) {
            case "+":
                return num1 + num2 ;
            case "-":
                return num1 - num2;
            case "*":
                return num1 * num2;
            case "/":
                return num1 / num2; 
            default :
                return -1;     
        }
    }
    
    
}
