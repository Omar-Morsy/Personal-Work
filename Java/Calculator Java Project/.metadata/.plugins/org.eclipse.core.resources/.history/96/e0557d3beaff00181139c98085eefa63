package ScientificCalculator;


public class CalculorThreaded {
	
	public CalculorThreaded() {
		
	}

    //Sum 
    public double sum (int num1 , int num2) {
        return num1+num2;
    }
    
    //sub 
    public double sub (int num1 , int num2) {
        return num1-num2;
    }
    
    //mul 
    public double mul (int num1 , int num2) {
        return num1*num2;
    }
    //div 
    public double div (int num1 , int num2) {
        return num1/num2;
    }
    
    
    //operation 

public double doOperation (String opCode , double num1 , double num2) {
        switch (opCode) {
            case "+":
                return this.sum(num1, num2);
            case "-":
                return this.sub(num1, num2);
            case "*":
                return this.mul(num1, num2);
            case "/":
                return this.div(num1, num2);    
            default :
                return -1;     
        }
    }
    
    
}
